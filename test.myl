section Init{{
   VAR(counter): 0     // Locale - sarà rimossa dopo Init
}}

section Increment{{
   (counter): (counter)++   // ❌ ERRORE: counter non esiste più!
   io.print (counter)
}}

section Final{{
   io.print Done
}}

program.run [
   order: {Init, Increment, Final},
   mode: debug,
   optimize: speed,
   repeat: 3,
   parallel: false,
   timeout: 5000,
   onerror: continue,
   trace: true
]
